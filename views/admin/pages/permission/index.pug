extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
    +alertError(4000)
    +alertSuccess(4000)
    h1 Phân Quyền
    .card.mb-3
        .card-header 
            .card-body
                .row 
                    .col-2
                        a(class="btn btn-outline-success" href=`${prefixAdmin}/permission/create`
                        ) + Thêm mới
    .card.mb-3
        .card-header Danh Sách Quyền
            .card-body                 
                table.table.table-hover.table-sm
                    thead
                        tr 
                            th 
                                input(type="checkbox", name="check-all")
                            th STT
                            th Nhóm quyền
                            th Mô tả quyền
                            th Hành động
                        each item,index in permission
                            tr 
                                th 
                                    input(class="" type="checkbox", name="check-multi",value=item.id)
                                td #{index+1}
                                td #{item.title}
                                td #{item.description}              
                                td 
                                    a(      class='btn btn-warning btn-sm'
                                            href=`${prefixAdmin}/permission/edit/${item.id}`
                                            ) Sửa 
                                    a(      class='btn btn-danger btn-sm ml-1'
                                            delete-item
                                            value=item.id
                                            ) Xóa  
                                    a(      class='btn btn-info btn-sm ml-1'
                                            href=`${prefixAdmin}/permission/detail/${item.id}`
                                            ) Chi tiết

        form(   id="delete-item" ,
            action="" ,
            method="POST",
            data-path=`${prefixAdmin}/permission/delete`) 