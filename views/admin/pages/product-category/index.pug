extends ../../layout/default.pug
include ../../mixins/filterStatus.pug

block main 

    h1 Danh Mục Sản Phẩm 
    .card.mb-3
        .card-header 
            .card-body
                .row 
                    .col-2
                        a(class="btn btn-outline-success" href=`${prefixAdmin}/product-category/create`
                        ) + Thêm mới
    .card.mb-3
        .card-header Danh Sách Sản Phẩm
            .card-body                 
                table.table.table-hover.table-sm
                    thead
                        tr 
                            th 
                                input(type="checkbox", name="check-all")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Vị trí
                            th Trạng thái
                            th Hành động
                        each item,index in record
                            tr 
                                th 
                                    input(class="" type="checkbox", name="check-multi",value=item.id)
                                td #{index+1}
                                td  
                                    img(src=item.thumbnail, alt=item.title, width= '100px',height="auto")
                                td #{item.title}
                                td 
                                    input(type="number"
                                            value=item.position
                                            min="1"
                                            style='width:60px'
                                            name='position'
                                            )
                                td
                                    if(item.status=="active")
                                        a(href="javascript:;"
                                        data-status=item.status 
                                        data-id=item._id 
                                        button-change-status
                                        class="badge badge-success") Hoạt Động
                                    else
                                        a(href="javascript:;"
                                        data-status=item.status 
                                        data-id=item._id
                                        button-change-status 
                                        class="badge badge-danger") Không Hoạt Động
                                
                                td 
                                    a(class='btn btn-warning btn-sm'
                                        href=`${prefixAdmin}/product/edit/${item.id}`
                                        ) Sửa 
                                    a(class='btn btn-danger btn-sm ml-1'
                                            delete-item
                                            value=item.id
                                            ) Xóa  
                                    a(class='btn btn-info btn-sm ml-1'
                                        href=`${prefixAdmin}/product/detail/${item.id}`
                                        ) Chi tiết
                                    
