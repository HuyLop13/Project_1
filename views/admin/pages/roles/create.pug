extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
    +alertError(4000)
    +alertSuccess(4000)

    h1(class="mb-4") Thêm mới quyền
    form(
        action=`${prefixAdmin}/role/create`
        id="form-create-role"
        method="POST")
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control" 
                id="title"
                name="title"
                )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="description"
                name="description"
                rows="5"
                )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
                ) Tạo mới
        