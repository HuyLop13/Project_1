mixin viewProduct(features)
    .row
        each item in features
            .col-4.mb-3
                .product-item
                    .inner-image
                        img(src=item.thumbnail alt=item.title)
                        if(item.featured=="1")
                            .inner-featured Nổi bật
                    .inner-content 
                        a(href=`/product/detail/${item.slug}`)
                            h1.inner-title #{item.title} 
                        .inner-price-new #{item.currentPrice}$
                        .inner-price-old #{item.price}$
                        .inner-discount -#{item.discountPercentage}%    